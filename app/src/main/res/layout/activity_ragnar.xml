<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RagnarActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="234dp" app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
                    android:id="@+id/scrollView2">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView11"
                        android:text="De acordo com o Vidente, Ragnar nasceu e cresceu nas terras perto de Kattegat, no sul da Noruega, e ganhou a reputação de ser um menino inteligente.
          Quando Ragnar tinha 15 anos, o rei Froh de Svealand invadiu a Noruega e matou o rei norueguês Siward . Ragnar juntou-se aos legalistas de Siward para expulsar Froh.
          O rei Froh era famoso por carregar serpentes manso ao redor de seu pescoço na batalha, que morderia seus inimigos enquanto ele lutava contra eles.
          Com a finalidade de combater Froh, Ragnar criou um casaco e calças de couro peludo."
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
            </ScrollView>
            <TextView
                    android:text="Você chegou através da Janela: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Ragnarpath" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.039"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="160dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/scrollView2"
                    app:layout_constraintVertical_bias="0.3"/>
            <ImageView
                    android:layout_width="152dp"
                    android:layout_height="159dp" app:srcCompat="@drawable/ragnar"
                    android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Amigos Favoritos"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:id="@+id/textView12" android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Ragnarpath" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:includeFontPadding="false"/>
            <TextView
                    android:text="Lagertha"
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Ragnarf1" android:layout_marginTop="28dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintEnd_toEndOf="@+id/textView12"
            />
            <TextView
                    android:text="Bjorn Ironside"
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_ragnarf2" app:layout_constraintEnd_toEndOf="@+id/tv_Ragnarf1"
                    app:layout_constraintStart_toStartOf="@+id/tv_Ragnarf1"
                    app:layout_constraintHorizontal_bias="0.516" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Ragnarf1"/>
            <TextView
                    android:text="Floki"
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Ragnarf3" app:layout_constraintEnd_toEndOf="@+id/tv_ragnarf2"
                    app:layout_constraintStart_toStartOf="@+id/tv_ragnarf2"
                    app:layout_constraintHorizontal_bias="0.551" android:autoText="false" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ragnarf2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
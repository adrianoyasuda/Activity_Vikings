<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RolloActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="225dp" app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/textView11"
                        android:text="Rollo é conhecido por ser um guerreiro temível com um machado e uma veia impulsiva que é forjado com lutas internas. Ao longo de todo o Vikings (série de TV) ele mostrou ser um pouco hedonista.
    Ele acredita fortemente em seus Deuses, especialmente Thor e que coisas ruins acontecem com ele porque os Deuses estão o punindo.
    Rollo é um guerreiro muito forte e feroz e um conquistador sedento de sangue que nunca recua de uma luta que, mesmo em um estado ferido, o poder e habilidade de Rollo como um guerreiro é temível.
    No entanto, às vezes ele pode ser visto como um personagem solitário que só quer ser amado e admirado.
    Rollo também tem uma relação de amor / ódio com seu irmão mais novo, Ragnar, devido a todo mundo sempre colocando Ragnar em primeiro lugar.
    Todo mundo sempre admirou seu irmão e Rollo pela primeira vez só quer provar um pouco do centro das atenções e apenas sair da sombra de Ragnar.
    Isso leva Rollo a se tornar tão impaciente que seu ciúme o cega tanto que ele acaba traindo seu irmão pela segunda vez, o que faz com que ele e seu irmão tenham uma cara violenta."
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
                        android:layout_marginBottom="8dp" android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" tools:ignore="HardcodedText"
                        android:layout_marginRight="8dp"/>
            </ScrollView>

            <TextView
                    android:text="Você chegou através da Janela: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_RolloPath" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.04"
                    android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/textView9"/>
            <ImageView
                    android:layout_width="152dp"
                    android:layout_height="159dp" app:srcCompat="@drawable/rollo"
                    android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
            <TextView
                    android:text="Rollo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="@+id/imageView"/>
            <TextView
                    android:text="Amigos Favoritos"
                    android:layout_width="266dp"
                    android:layout_height="55dp"
                    android:id="@+id/textView12" android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_RolloPath" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:includeFontPadding="false"/>

            <TextView
                    android:text="Ragnar Lothbrok"
                    android:textSize="23dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_Rollof"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintEnd_toEndOf="@+id/textView12" android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" app:layout_constraintHorizontal_bias="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>